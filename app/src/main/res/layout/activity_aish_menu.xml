<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context="com.example.car.vorento.AishMenu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/lay1"
        android:layout_marginTop="100dp">

    <ImageButton
        android:layout_width="100dp"
        android:layout_marginTop="25dp"
        android:id="@+id/question"
        android:background="@drawable/ques"
        android:layout_marginLeft="60dp"
        android:layout_height="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/question"
            android:layout_below="@+id/question"
            android:textColor="#000"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:text="Ask me..?" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/question"
            android:id="@+id/todo"
            android:layout_marginStart="56dp"
            android:layout_toEndOf="@+id/question"
            android:background="@drawable/todo1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_alignStart="@+id/todo"
            android:layout_below="@+id/question"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:text="Todo" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/lay1"
        android:layout_marginTop="0dp">
        <ImageButton
            android:layout_width="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/news"
            android:layout_height="100dp"
            android:id="@+id/newseeds" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_alignStart="@+id/newseeds"
            android:layout_below="@+id/newseeds"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:text="NewsFeeds" />

        <ImageButton
            android:id="@+id/abt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/newseeds"
            android:layout_marginEnd="51dp"
            android:background="@drawable/aboutus" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/abt"
            android:layout_below="@+id/abt"
            android:textColor="#000"
            android:layout_marginStart="25dp"
            android:layout_marginTop="0dp"
            android:text="Form.." />
    </RelativeLayout>
</RelativeLayout>
